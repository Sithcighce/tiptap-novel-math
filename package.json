{
  "name": "tiptap-novel-math",
  "version": "0.1.3",
  "description": "A Notion-like interactive math formula extension for Tiptap/Novel editor.",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "examples/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./src/styles.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && cp src/styles.css dist/styles.css",
    "build:win": "tsup src/index.ts --format cjs,esm --dts && copy src\\styles.css dist\\styles.css",
    "lint": "tsc",
    "test": "vitest",
    "prepublishOnly": "npm run build:win"
  },
  "keywords": [
    "tiptap",
    "extension",
    "math",
    "latex",
    "katex",
    "novel",
    "editor"
  ],
  "author": "Sithcighce",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sithcighce/tiptap-novel-math.git"
  },
  "bugs": {
    "url": "https://github.com/Sithcighce/tiptap-novel-math/issues"
  },
  "homepage": "https://github.com/Sithcighce/tiptap-novel-math#readme",
  "peerDependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/react": "^2.0.0",
    "lucide-react": ">=0.292.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "clsx": "^2.0.0",
    "katex": "^0.16.9",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/katex": "^0.16.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jsdom": "^27.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.14"
  }
}
